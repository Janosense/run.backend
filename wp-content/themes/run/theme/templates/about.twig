{% extends "templates/layouts/base.twig" %}

{% block head %}
	<title>Журнал бегуна - Обо мне</title>
{% endblock %}

{% block content %}
	<main>

		<section class="about">
			<div class="wrapper about__wrapper">
				<div class="about__holder">
					<div class="about__layout">
						<header class="about__header">
							<h1 class="heading about__heading">{{ post.title }}</h1>
							<p class="about__caption">и немного про это блог</p>
						</header>
						<div class="about__content">
							{{ post.content | raw }}
						</div>
					</div>
					<div class="about__statistics">
						{% include "templates/partials/common/statistics.twig" %}
					</div>
				</div>
			</div>
		</section>
		<!-- ABOUT end -->

		{% if goals is defined and goals is not empty %}
			<!-- GOALS start-->
			<div class="goals">
				<div class="wrapper goals__wrapper">
					<h2 class="goals__heading">мои беговые цели и планы</h2>

					<div class="track goals__track">
						<ul class="track__list">
							{% for goal in goals %}
								<li class="track__item track__item--{{ goal.state }}">
									<div class="goal">
										<h3 class="goal__title">{{ goal.title }}</h3>
										<span class="goal__number">{{ loop.index }}</span>
										<p class="goal__description">{{ goal.description }}</p>
									</div>
								</li>
							{% endfor %}
						</ul>
					</div>

					<div class="goals__text">
						<p>
							...и еще куча других менее глобальных целей, задач и просто "хотелок".<br>
							Есть забеги в которых я бы хотел поучаствовать, но самоцели готовится к ним у меня нет.<br>Например
							Bison
							Race в Беларуси, любой ночной забег, эстафета, свимран и т.д.
						</p>
					</div>
				</div>
			</div>
			<!-- GOALS end-->
		{% endif %}
	</main>
{% endblock %}
