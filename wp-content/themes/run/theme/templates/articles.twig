{% extends "templates/layouts/base.twig" %}

{% block head %}
	<title>Журнал бегуна - Записи</title>
{% endblock %}

{% block content %}
	<main>
		<div class="posts-preview posts-preview--inner">
			<div class="wrapper posts-preview__wrapper">
				<h2 class="heading posts-preview__heading">{{ title }}</h2>
				<ul class="posts-preview__list">
					{% for id, article in articles %}
						{% include "templates/partials/articles/post-preview.twig" %}
					{% endfor %}
				</ul>
				{% include "templates/partials/articles/pagination.twig" %}
			</div>
		</div>

	</main>
{% endblock %}
